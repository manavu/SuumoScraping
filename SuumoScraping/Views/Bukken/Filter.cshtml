@model SuumoScraping.ViewModels.FilterForm

@{
    ViewBag.Title = "検索条件";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Filter", "Bukken", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Address, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Access, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Access, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.MinPrice, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.MinPrice, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(m => m.MaxPrice, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.MaxPrice, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.MinArea, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.MinArea, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(m => m.MaxArea, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.MaxArea, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.ImportedDateFrom, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.ImportedDateFrom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(m => m.ImportedDateTo, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(m => m.ImportedDateTo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="row">
        <button class="col btn btn-primary" type="submit">検索</button>
    </div>
}
