<p>
    @Html.ReferrerLink("Back to List")
</p>

@section scripts
{
<script type="text/javascript">
    $(document).delegate('*[data-toggle="lightbox"]', 'click', function (event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });
</script>
}