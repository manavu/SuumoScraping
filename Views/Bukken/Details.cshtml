        {
            var imgUrlAction = Url.Action("Data", "File", new { id = file.Id });

            <dt class="col-sm-3">
                @Html.DisplayFor(model => file.Title)
            </dt>
            <dd class="col-sm-9">
                <a href="@imgUrlAction" data-lightbox="lightbox" data-title="@file.Title">
